    line-height: 40 rpx;
    font-size: 14 rpx;
    color: #fff;
    height: 40 rpx;
    padding-top: 10 rpx;
}

.song-title {
  position: absolute;
  transform: translateY(72rpx);
  font-size: 25rpx;
    top: 42 rpx;
    left: 10%;
    width: 80%;
    line-height: 20 rpx;
    text-align: center;
    color: #fff;
    padding-bottom: 10 rpx;
}

.music-img {
    display: block;
    position: absolute;
    left: 50%;
    transform: translate(-50%,200rpx);
    top: 250 rpx;
    width: 80%;

}

.music-image {
    height: 600rpx;
    width: 600rpx;
    border-radius: 50%;
}

h2 {
    margin-top: 100 rpx;
}

.player-control {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 50rpx;

}

.progress {
    margin: 10 rpx auto;
    width: 90%;

}

.player-button {
    text-align: center;
    display: inline-block;
    width: 100%;
    height: 50 rpx;
    vertical-align: middle;
