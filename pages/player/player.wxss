.container{
  position: relative;
}
.player {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: #222;
    background-repeat: no-repeat;
    background-size: cover;

}

.hidden {
    position: absolute;
    top: 0;
    left: 6rpx;
    z-index: 60;

}

i {
    font-size: 22rpx;
    display: block;
    padding: 10rpx;
    color: #ffcd32;
}

.background {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.6;
    -webkit-filter: blur(20px);
}
.bg-image{
  width: 100%;
