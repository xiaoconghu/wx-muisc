/* 控制条 */

.song-control {
    padding: 30rpx 0;
    height: 140rpx;
    box-sizing: border-box;
}

.song-control .progress {
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.progress .time-start,
.progress .time-total {
    flex: 0 0 110rpx;
    color: #808080;
    width: 110rpx;
    text-align: center;
    font-size: 24rpx;
}

.progress .time-bar {
    position: relative;
    flex: auto;
    height: 4rpx;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.2);
}

.progress .time-bar .time-play {
    position: absolute;
    left: -100%;
    top: 0;
    width: 100%;
    height: 100%;
    background: #31c27c;
    transition: all 1s linear;
}
@keyframes animate {
    0% {
        transform: rotate(0);
    }
    25% {
        transform: rotate(90deg);
    }
    50% {
        transform: rotate(180deg);
    }
    75% {
        transform: rotate(270deg);
    }
    100% {
        transform: rotate(360deg);
    }
}
    .play{
      animation: animate infinite linear 20s
    }
    .pause{
      animation: none;
    }