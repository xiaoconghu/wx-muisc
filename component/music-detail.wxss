/* component/music-detail.wxss */

.title {
  position: absolute;
  top: px2rem(12px);
  left: 10%;
  z-index: 40;
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  line-height: px2rem(40px);
  font-size: px2rem(26px);
  color: #eee;
  text-shadow: 2px 3px 2px #333;
}

.music-img {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 70%;
  transform-origin: top;
  background-size: cover;
  /*animation: rotate infinite 3s;*//*animation: rotate infinite 3s;*/
}

.m-image {
  border: none;
  position: absolute;
  top: 0;
  left: 0;
  vertical-align: bottom;
  width: 100%;
}

.filter {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(7, 17, 27, 0.4);
}

.play-all {
  position: absolute;
  bottom: 60rpx;
  z-index: 50;
  width: 100%;
  text-align: center;
  padding: 7rpx 0;
}

.span {
  display: inline-block;
  box-sizing: border-box;
  width: 250rpx;
  height: 50rpx;
  margin: 0 auto;
  border: 1px solid #ffcd32;
  color: #ffcd32;
  border-radius: 100rpx;
  vertical-align: middle;
  font-size: 30rpx;
  line-height: 15rpx;
}

.song-list {
  padding: 20px 30px;
  width: 750rpx;
  overflow: hidden;
}

.s-ul {
  width: 750rpx;
}

.s-li {
  margin-bottom: 20px;
  width: 750rpx;
}

.h2 {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: black;
  font-size: 35rpx;
  display: block;
   width: 700rpx;
  margin-bottom: 20rpx;
}

.p {
  text-overflow: ellipsis;
  overflow: hidden;
  width: 700rpx;
  white-space: nowrap;
  margin-top: 4rpx;
  color: brown;
  font-size: 35rpx;
}
